<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generating Round...</title>
    <style>
        :root {
            --primary: #7c4dff; /* Geoguessr-ish Purple */
            --accent: #00e676;  /* Success Green */
            --bg-overlay: rgba(15, 23, 42, 0.85); /* Dark blue overlay */
            --glass: rgba(255, 255, 255, 0.1);
        }

        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
            overflow: hidden;
            background-color: #1a1a1a;
        }

        /* Background Image with Overlay */
        .background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            z-index: -1;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-overlay);
            backdrop-filter: blur(5px);
            z-index: 0;
        }

        /* Centered Card */
        .container {
            position: relative;
            z-index: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            color: white;
            text-align: center;
        }

        .card {
            background: var(--glass);
            padding: 3rem;
            border-radius: 24px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 20px 50px rgba(0,0,0,0.5);
            max-width: 400px;
            width: 90%;
            animation: slideUp 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        h1 {
            font-size: 1.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        p {
            font-size: 0.95rem;
            color: #ccc;
            margin-top: 0;
        }

        /* "Radar" Loader Animation */
        .loader-box {
            position: relative;
            width: 80px;
            height: 80px;
            margin: 0 auto 2rem auto;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .globe {
            width: 40px;
            height: 40px;
            background: white;
            border-radius: 50%;
            position: relative;
            z-index: 2;
            box-shadow: 0 0 20px rgba(255,255,255,0.5);
        }

        .ring {
            position: absolute;
            border: 2px solid var(--primary);
            border-radius: 50%;
            opacity: 0;
            animation: ripple 2s infinite cubic-bezier(0, 0.2, 0.8, 1);
        }

        .ring:nth-child(2) { animation-delay: -0.5s; }
        .ring:nth-child(3) { animation-delay: -1s; }

        /* Animations */
        @keyframes ripple {
            0% {
                width: 40px;
                height: 40px;
                opacity: 1;
                border-width: 3px;
            }
            100% {
                width: 120px;
                height: 120px;
                opacity: 0;
                border-width: 0px;
            }
        }

        @keyframes slideUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .dots::after {
            content: '.';
            animation: dots 1.5s steps(5, end) infinite;
        }

        @keyframes dots {
            0%, 20% { content: '.'; }
            40% { content: '..'; }
            60% { content: '...'; }
            80%, 100% { content: ''; }
        }
    </style>
</head>
<body>

    <div class="background"></div>
    <div class="overlay"></div>

    <div class="container">
        <div class="card">
            <div class="loader-box">
                <div class="ring"></div>
                <div class="ring"></div>
                <div class="globe"></div>
            </div>
            <h1>Scouting World</h1>
            <p>Generating random locations<span class="dots"></span></p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Optional: Add a slight artificial delay if it's too fast, 
            // so users can see the animation.
            
            const checkStatus = async () => {
                try {
                    const resp = await fetch(window.location.pathname + '/status');
                    const data = await resp.json();
                    
                    if (data.status !== "generating") {
                        // Fade out effect before reload (optional visual polish)
                        document.querySelector('.card').style.opacity = '0';
                        document.querySelector('.card').style.transform = 'scale(0.95)';
                        document.querySelector('.card').style.transition = 'all 0.3s ease';
                        
                        setTimeout(() => {
                            window.location.reload();
                        }, 300);
                    }
                } catch (error) {
                    console.error("Polling error:", error);
                }
            };

            // Start polling
            setInterval(checkStatus, 1000);
        });
    </script>
</body>
</html>
